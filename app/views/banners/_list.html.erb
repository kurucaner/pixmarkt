<table data-page-size="30" class="table footable">
  <thead class="hidden-xs">
    <tr>
      <th width="25%">Title</th>
      <th width="15%">Position</th>
      <th width="25%">URL</th>
      <th width="10%">Image</th>
      <th width="15%">From</th>
      <th width="10%" data-sort-ignore="true"></th>
    </tr>
  </thead>
  <tbody>
    <% @banners.each do |banner| %>
    <tr>
      <td><%= link_to banner.title, edit_banner_path(banner) %></td>
      <td><%= banner.position.split("-").last %></td>
      <td><%= banner.url %></td>
      <td><%= image_tag banner.image.thumb.url %></td>
      <td><%= banner.start_time.strftime("%d/%m/%Y") %></td>
      <td class="text-right">
        <%= link_to content_tag(:span, "", class: "fa fa-times text-dark"), banner_path(banner), data: { behaviour: 'confirm', title: "Are you sure?", text: "Click yes to delete this banner." } %>
      </td>
    </tr>
  <% end %>
  <% if @banners.size == 0 %>
    <tr>
      <td colspan="4">No banners to display.</td>
    </tr>
  <% end %>
  </tbody>
  <%#= render 'layouts/table_pagination' %>
</table>
